<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/result_minor_text"
    android:layout_height="match_parent"
    tools:context=".fragments.MyFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/result_points"
        android:layout_height="190dp">
        <ImageView
            android:id="@+id/myimg"
            android:layout_width="100dp"
            android:src="@mipmap/avatar"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:layout_height="100dp" />
        


    </RelativeLayout>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardmy"
        android:layout_below="@id/myimg"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="我的订单"
                android:textStyle="bold"

                android:layout_centerVertical="true"
                android:id="@+id/myorder"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/allorder"
                android:text="全部订单"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_24dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/ic_order_wait_pay"
                android:text="代付款"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_order_wait_ship"
                android:text="代发货"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/ic_order_shipped"
                android:text="已发货"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/ic_order_history"
                android:text="历史"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>